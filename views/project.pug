extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
      
        //- Use interpolation to dynamically add the project title.
        h1 #{project_name}

        //- Use interpolation to dynamically add the project description.
        p.lead.text-light
          | #{description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        //- loop thru and add the technologies
        ul
          each technology in technologies
            li= technology

        //- Demo and Github buttons. These open to new tabs
        a.button.expanded(href=`${live_link}`  target=`_blank`) Live Demo
        a.button.expanded(href=`${github_link}` target=`_blank`) GitHub Repo
    
    //- Add the project images to each project page
    img.image(src=`${image_urls[1]}`)
    img.image(src=`${image_urls[2]}`)